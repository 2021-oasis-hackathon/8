<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypingBarcodenumAct">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="81dp"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:text="바코드에 적힌\n숫자를 입력해주세요"
        android:textColor="#191919"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/typebarcode"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:textColorHint="#4e4e4e"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textSize="12sp"
        android:textColor="#191919"
        android:ems="10"
        android:hint="바코드 번호를 입력해주세요."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="288dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/overlay"
        android:foreground="@drawable/ic_pic08"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typebarcode"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>